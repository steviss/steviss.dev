---
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

type Props = { title: string; description: string };

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body>
    <main class="w-full h-full overflow-auto p-2 sm:p-4 md:p-8 lg:p-16 xl:p-20">
      <div class="container min-h-screen m-auto bg-white flex flex-col">
        <Header />
        <section class="flex-1 w-full my-auto p-4 sm:p-6 md:p-10">
          <slot />
        </section>
        <Footer />
      </div>
    </main>
  </body>
</html>
