---
import { useSanityClient } from '@sanity/astro'
import PortableText from 'src/components/sanity/PortableText.astro'
import BlogPostLayout from 'src/layouts/BlogPostLayout.astro'
import type { PostType } from 'src/types'
import { convertToPostType } from 'src/utility'

export async function getStaticPaths() {
  const query = `*[_type == "post"]`
  const posts = await useSanityClient().fetch(query)
  const postsTyped = convertToPostType(posts)
  return postsTyped.map((post: PostType) => {
    return {
      params: {
        slug: post.slug?.current || '',
      },
      props: { ...post },
    }
  })
}

const { title, body, description, pubDate, updatedDate, heroImage } = Astro.props
---

<BlogPostLayout
  title={title}
  description={description}
  pubDate={pubDate}
  updatedDate={updatedDate}
  heroImage={heroImage}
>
  <PortableText portableText={body} />
</BlogPostLayout>
