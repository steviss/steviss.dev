---
import Link from './Link.astro'
import { FontAwesomeIcon } from '@fortawesome/react-fontawesome'
import { faCode, faFloppyDiskPen, faWrench } from '@fortawesome/sharp-solid-svg-icons'
import { IconContainer } from 'src/components/react'
---

<>
  <li class="border-b md:border-none border-primary border-opacity-30 last:border-none">
    <Link class="group" href="/blog">
      <IconContainer className="px-2">
        <FontAwesomeIcon
          icon={faFloppyDiskPen}
          className="w-5 h-5 text-primary group-hover:text-secondary transition-color duration-300 ease-in-out"
        />
      </IconContainer><span class="ml-2 md:ml-0">Blog</span>
    </Link>
  </li>
  <li class="border-b md:border-none border-primary border-opacity-30 last:border-none">
    <Link class="group" href="/snippets">
      <IconContainer className="px-2">
        <FontAwesomeIcon
          icon={faCode}
          className="w-5 h-5 text-primary group-hover:text-secondary transition-color duration-300 ease-in-out"
        />
      </IconContainer><span class="ml-2 md:ml-0">Snippets</span>
    </Link>
  </li>
  <li class="border-b md:border-none border-primary border-opacity-30 last:border-none">
    <Link class="group" href="/projects">
      <IconContainer className="px-2">
        <FontAwesomeIcon
          icon={faWrench}
          className="w-5 h-5 text-primary group-hover:text-secondary transition-color duration-300 ease-in-out"
        />
      </IconContainer><span class="ml-2 md:ml-0">Projects</span>
    </Link>
  </li>
</>
