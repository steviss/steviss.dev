---
export interface Props extends Partial<HTMLTimeElement> {
  date: Date;
}

const { date, className } = Astro.props;
---

<time class={className} datetime={date.toISOString()}>
  {
    date.toLocaleDateString("en-us", {
      year: "numeric",
      month: "short",
      day: "numeric",
    })
  }
</time>
