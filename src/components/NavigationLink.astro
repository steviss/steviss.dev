---
import Link from './Link.astro'
import type { LucideIcon } from 'lucide-react'
import type { HTMLAttributes } from 'astro/types'
import { IconContainer } from 'src/components/react'

type Props = HTMLAttributes<'a'> & {
  label: string
  icon: LucideIcon
}

const { href, icon: Icon, label } = Astro.props
---

<li class="border-b md:border-none border-primary border-opacity-30 last:border-none">
  <Link class="group" href={href}>
    <IconContainer className="px-2">
      <Icon size={20} className="text-primary group-hover:text-secondary transition-color duration-300 ease-in-out" />
    </IconContainer><span class="ml-2 md:ml-0">{label}</span>
  </Link>
</li>
